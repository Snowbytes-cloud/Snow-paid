-- Carrega a ZS-LIB
local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/556ii/ZS-LIB/refs/heads/main/SUEZ", true))()

local Players = game:GetService("Players")
local player = Players.LocalPlayer

local leaderstats = player:WaitForChild("leaderstats", 5)
local startRebirths = leaderstats and leaderstats:FindFirstChild("Rebirths") and leaderstats.Rebirths.Value or 0
local displayName = player.DisplayName

-- cria a janela
local window = library:AddWindow("Snow paid", {
    main_color = Color3.fromRGB(0, 255, 255), -- ciano
    min_size   = Vector2.new(660, 660),
    can_resize = false
})

-- cria uma aba/página
local page = window:AddTab("Principal")

-- dentro da aba você pode agrupar em seções
local section = page:AddSection("Funções")

section:AddButton("Ativar algo", function()
    print("Botão clicado!")
end)

section:AddToggle("GodMode", false, function(state)
    print("GodMode:", state)
end)

section:AddSlider("Velocidade", 16, 16, 200, function(value)
    print("Velocidade =", value)
end)

local drop = section:AddDropdown("Escolha algo", {"Opção 1","Opção 2","Opção 3"}, function(choice)
    print("Escolheu:", choice)
end)

section:AddBox("Digite algo", function(text)
    print("Você digitou:", text)
end)

section:AddBind("Keybind Teste", Enum.KeyCode.K, function(key)
    print("Você apertou:", key.Name)
end)

section:AddColorpicker("Escolha uma cor", Color3.fromRGB(255,255,255), function(color)
    print("Nova cor:", color)
end)

print("Script iniciado por:", displayName)
print("Rebirths atuais:", startRebirths)
